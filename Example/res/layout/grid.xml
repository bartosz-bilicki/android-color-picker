<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Button.Small"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:showDividers="none">

            <ImageView
                android:src="@android:color/holo_purple"
                android:background="@android:color/holo_purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:maxHeight="32dp"
                android:maxWidth="32dp"
                android:minHeight="32dp"
                android:minWidth="32dp"
                android:layout_margin="1dp"
                android:padding="1dp"/>

            <ImageView
                android:background="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView22"
                android:maxHeight="32dp"
                android:maxWidth="32dp"
                android:minHeight="32dp"
                android:minWidth="32dp"
                android:clickable="true"
                android:layout_margin="1dp"
                android:padding="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@android:color/holo_purple"
                android:background="@android:color/holo_purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView33"
                android:maxHeight="32dp"
                android:maxWidth="32dp"
                android:minHeight="32dp"
                android:minWidth="32dp"
                android:layout_margin="1dp"
                android:padding="1dp"/>

            <ImageView
                android:background="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView44"
                android:maxHeight="32dp"
                android:maxWidth="32dp"
                android:minHeight="32dp"
                android:minWidth="32dp"
                android:clickable="true"
                android:layout_margin="1dp"
                android:padding="0dp"/>
        </LinearLayout>
    </LinearLayout>

    <GridLayout
        style="@android:style/Widget.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:paddingEnd="5dp"
        android:paddingStart="5dp">

        <ImageView
            android:src="@android:color/holo_purple"
            android:background="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView1"
            android:maxHeight="32dp"
            android:maxWidth="32dp"
            android:minHeight="32dp"
            android:minWidth="32dp"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:clickable="true"
            android:focusable="true" android:onClick="color1"/>

        <ImageView
            android:src="@android:color/holo_red_light"
            android:background="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:maxHeight="32dp"
            android:maxWidth="32dp"
            android:minHeight="32dp"
            android:minWidth="32dp"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:focusable="true"
            android:clickable="true" android:onClick="color2"/>

        <ImageView
            android:src="@android:color/darker_gray"
            android:background="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:maxHeight="32dp"
            android:maxWidth="32dp"
            android:minHeight="32dp"
            android:minWidth="32dp"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:clickable="true"
            android:focusable="true" android:onClick="color3"/>

        <ImageView
            android:src="@android:color/holo_orange_light"
            android:background="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:maxHeight="32dp"
            android:maxWidth="32dp"
            android:minHeight="32dp"
            android:minWidth="32dp"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:focusable="true"
            android:clickable="true" android:onClick="color4"/>
    </GridLayout>

</LinearLayout>